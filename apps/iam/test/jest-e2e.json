{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@app/common(|/.*)$": "<rootDir>/../../../libs/common/src/$1",
    "^@app/iam-lib(|/.*)$": "<rootDir>/../../../libs/iam-lib/src/$1"
  },
  "setupFiles": [
    "dotenv/config"
  ]
}
